{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "quotes": ["error", "single"],
		"linebreak-style": ["error", "windows"],
		"comma-dangle": ["error", "never"],
		"no-tabs": 0,
		"indent": ["error", "tab"],
        "no-shadow": "off",
        "@typescript-eslint/no-shadow": ["error"]
    }
}
